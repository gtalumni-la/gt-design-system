{
  "name": "@gtalumni-la/gt-design-system",
  "version": "0.1.0",
  "description": "GT Design System - Georgia Tech Alumni Association Design System Monorepo",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/gtalumni-la/gt-design-system.git"
  },
  "homepage": "https://github.com/gtalumni-la/gt-design-system",
  "bugs": {
    "url": "https://github.com/gtalumni-la/gt-design-system/issues"
  },
  "author": "Georgia Tech Alumni Association",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:ci": "turbo run test:ci",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "ci:test": "turbo run test:ci --",
    "ci:build": "turbo run build",
    "ci:lint": "turbo run lint",
    "ci:type-check": "turbo run type-check",
    "docs:dev": "turbo run docs:dev",
    "docs:build": "turbo run docs:build",
    "docs:preview": "turbo run docs:preview",
    "version:list": "node scripts/version-docs.js --list",
    "version:create": "node scripts/version-docs.js --version",
    "preview:list": "node scripts/preview-docs.js --list",
    "preview:cleanup": "node scripts/preview-docs.js --cleanup",
    "preview:cleanup-old": "node scripts/preview-docs.js --cleanup-old",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm run build && changeset publish",
    "prepare": "husky install",
    "publish-packages": "pnpm run build && pnpm changeset publish --registry https://registry.npmjs.org"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
