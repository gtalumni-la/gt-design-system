{
  "name": "@gtalumni-la/react",
  "version": "0.1.0",
  "description": "React - Georgia Tech Alumni Association React UI Components",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "default": "./dist/index.esm.js"
    }
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/gtalumni-la/gt-design-system.git",
    "directory": "packages/react"
  },
  "homepage": "https://github.com/gtalumni-la/gt-design-system/tree/main/packages/react",
  "bugs": {
    "url": "https://github.com/gtalumni-la/gt-design-system/issues"
  },
  "author": "Georgia Tech Alumni Association",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:check": "npm run type-check && rollup -c",
    "dev": "rollup -c --watch",
    "clean": "rimraf dist",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "format": "prettier --write \"./**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"./**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile=test-report.junit.xml",
    "test:ui": "vitest --ui",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "@gtalumni-la/tokens": "workspace:*",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@gtalumni-la/eslint": "workspace:*",
    "@gtalumni-la/typescript": "workspace:*",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@storybook/addon-actions": "^9.0.8",
    "@storybook/react": "^9.1.3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "axe-core": "^4.10.3",
    "eslint": "^9.34.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.48.1",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "keywords": [
    "buzz",
    "react",
    "components",
    "ui",
    "georgia-tech",
    "georgia-tech-alumni",
    "design-system",
    "gtalumni-la",
    "typescript",
    "accessibility",
    "yellow-jacket",
    "alpha",
    "development"
  ]
}
