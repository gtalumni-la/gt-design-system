{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".vitepress/dist/**",
        "storybook-static/**"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!**/*.stories.{tsx,jsx,mdx}"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**",
        "test-results.xml"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:ci": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**",
        "test-report.junit.xml"
      ]
    },
    "test:coverage": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "docs:dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "docs:build": {
      "dependsOn": [
        "^build",
        "^docs:build"
      ]
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "cache": false,
      "outputs": []
    },
    "format": {
      "cache": false,
      "outputs": []
    },
    "format:check": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": [
        "^build"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}
